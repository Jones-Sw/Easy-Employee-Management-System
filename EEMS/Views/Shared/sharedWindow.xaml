<Window
    x:Class="EEMS.UI.Views.Shared.sharedWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:UC="clr-namespace:EEMS.UI.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="shared Window"
    Width="1150"
    Height="790"
    MinWidth="1150"
    MinHeight="790"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        Background="#fff"
        CornerRadius="10"
        MouseDown="Border_MouseDown"
        MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--  exit window  -->

            <TextBlock
                Margin="50,0,0,2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#4880ff"
                Text="Add New Employee Form" />
            <Icon:PackIconMaterial
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="#4880ff"
                Kind="AccountOutline" />

            <StackPanel
                Grid.Column="1"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="btnMinimize"
                    Margin="0,0,10,2"
                    Click="btnMinimize_Click"
                    FontSize="20"
                    Style="{StaticResource topButton}">
                    <Icon:PackIconMaterial Kind="Minus" />
                </Button>

                <Button
                    x:Name="btnExit"
                    Margin="0,0,0,0"
                    Click="btnExit_Click"
                    Content="X"
                    FontSize="20"
                    Style="{StaticResource topButton}" />
            </StackPanel>

            <Frame
                x:Name="sharedWindowFrame"
                Grid.Row="1"
                NavigationUIVisibility="Hidden" />


        </Grid>
    </Border>

</Window>
