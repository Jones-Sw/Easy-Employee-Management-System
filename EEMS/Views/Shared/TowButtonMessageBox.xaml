<Window
    x:Class="EEMS.UI.Views.Shared.TowButtonMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:EEMS.UI.ViewModels"
    Title="CustomMessageBoxWindow"
    Width="400"
    Height="250"
    Background="#f2f5f8"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:TwoButtonMessageBoxViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="26" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="50,0,0,2"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="14"
            FontWeight="SemiBold"
            Foreground="#4880ff"
            Text="{Binding Title}" />
        <Icon:PackIconMaterial
            Grid.Row="0"
            Margin="20,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="#4880ff"
            Kind="AccountOutline" />

        <StackPanel
            Grid.Row="0"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="btnMinimize"
                Margin="0,0,10,2"
                VerticalAlignment="Top"
                Click="btnMinimize_Click"
                FontSize="20"
                Style="{StaticResource topButton}">
                <Icon:PackIconMaterial Kind="Minus" />
            </Button>

            <Button
                x:Name="btnExit"
                Margin="0,0,0,0"
                VerticalAlignment="Top"
                Click="btnExit_Click"
                Content="X"
                FontSize="20"
                Style="{StaticResource topButton}" />
        </StackPanel>

        <TextBlock
            Grid.Row="1"
            Margin="0,5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            Text="{Binding Message}" />

        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Name="CancelButton"
                Width="100"
                Margin="0,0,10,0"
                Padding="5"
                Command="{Binding CancelCommand}"
                Content="{Binding CancelButtonText}"
                Style="{StaticResource SecondaryButton}">
                <Button.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="-120"
                        Opacity="0.3"
                        ShadowDepth="5"
                        Color="#4880ff" />
                </Button.Effect>
            </Button>
            <Button
                Name="AddButton"
                Width="100"
                Margin="0,0,10,0"
                Padding="5"
                Command="{Binding ConfirmCommand}"
                Content="{Binding ConfirmButtonText}"
                Style="{StaticResource mainButton}">
                <Button.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="-120"
                        Opacity="0.3"
                        ShadowDepth="5"
                        Color="#4880ff" />
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Window>
