<UserControl x:Class="EEMS.UI.UserControls.EmailAndVerificationCode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EEMS.UI.UserControls"
             mc:Ignorable="d" 
          d:DesignHeight="740" d:DesignWidth="450">
    <Border Background="#eff2f7" CornerRadius="30">
        <Grid>
            <TextBlock Margin="0,34,0,673" HorizontalAlignment="Center" FontSize="23" FontWeight="Bold" Text="Email Verification" />
            <Image Margin="0,80,0,410"  Height="250" Source="/UserControls/Email campaign-rafiki.png"/>
            <TextBlock Margin="0,335,0,370" HorizontalAlignment="Center" FontSize="19" FontWeight="Regular" Text="Please enter your email address to receive" />
            <TextBlock Margin="0,359,0,346" HorizontalAlignment="Center" FontSize="19" FontWeight="Regular" Text="the verification code" />
            <TextBox  HorizontalAlignment="Left" Margin="110,410,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="278" Height="47" BorderBrush="#FFC8C8C8" FontSize="17"/>
            <TextBox  HorizontalAlignment="Left" Margin="110,548,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="278" Height="47" BorderBrush="#FFC8C8C8" FontSize="17"  Foreground="DimGray"  Text="Enter Verficiation code"/>
            <Button   Background="#4880ff" Content="Verfiy" HorizontalAlignment="Center" Margin="0,616,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.519,-0.763" Width="230" Height="43" Foreground="White" BorderBrush="#FF4880FF" FontWeight="DemiBold" FontSize="16"/>
            <Button  Background="Transparent"  Content="Sign in"  HorizontalAlignment="Center" Margin="0,674,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.519,-0.763" Width="186" Height="23" Foreground="DimGray" FontWeight="DemiBold" BorderBrush="Transparent" FontSize="16"/>
            <Button   Background="#4880ff" Content="Send code" HorizontalAlignment="Center" Margin="0,480,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.519,-0.763" Width="230" Height="43" Foreground="White" BorderBrush="#FF4880FF" FontWeight="DemiBold" FontSize="16"/>
            <Image HorizontalAlignment="Left" Height="49" Margin="48,410,0,0" VerticalAlignment="Top" Width="52" Source="/UserControls/email.png"/>
            <Image HorizontalAlignment="Left" Height="49" Margin="48,548,0,0" VerticalAlignment="Top" Width="52" Source="/UserControls/password.png" />
        </Grid>
    </Border>
</UserControl>
