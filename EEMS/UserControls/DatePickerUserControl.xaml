<UserControl
    x:Class="EEMS.UI.UserControls.DatePickerUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="60"
    d:DesignWidth="250"
    mc:Ignorable="d">
    <StackPanel Margin="20,10">
        <TextBlock
            Margin="0,0,0,8"
            FontSize="13"
            Foreground="#97a5b4"
            Text="{Binding Caption, RelativeSource={RelativeSource AncestorType=UserControl}}" />

        <DatePicker
            Name="dataPicker"
            Width="250"
            Height="30"
            FontSize="14"
            Foreground="#868686"
            SelectedDate="{Binding SelectedDate, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </StackPanel>

</UserControl>
