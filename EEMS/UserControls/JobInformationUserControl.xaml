<UserControl
    x:Class="EEMS.UI.UserControls.JobInformationUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UC="clr-namespace:EEMS.UI.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <UC:TextBoxUserControl
            Grid.Column="0"
            Caption="Job Title"
            Hint="Enter your job title" />
        <UC:TextBoxUserControl
            Grid.Row="1"
            Grid.Column="0"
            Caption="Essential Training"
            Hint="Enter your Essential Training" />
        <UC:TextBoxUserControl
            Grid.Row="2"
            Grid.Column="0"
            Caption="Language Spoken"
            Hint="Enter your spoken language" />
        <UC:TextBoxUserControl
            Grid.Row="3"
            Grid.Column="0"
            Caption="Experience"
            Hint="Enter your experience" />
        <UC:DatePickerUserControl
            Grid.Row="4"
            Grid.Column="0"
            HorizontalAlignment="Left"
            Caption="RecrutmentDate" />
        <UC:ComboBoxUserControl
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Left"
            Caption="Department" />
        <UC:ComboBoxUserControl
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="left"
            Caption="Job Nature" />
        <UC:RadioButtonGroupUserControl
            Grid.Row="2"
            Grid.Column="1"
            Caption="Status"
            Option1Text="Active"
            Option2Text="Inactive"
            SelectedValue="{Binding SelectedStatus, Mode=TwoWay}" />
        <UC:ComboBoxUserControl
            Grid.Row="3"
            Grid.Column="1"
            HorizontalAlignment="Left"
            Caption="Family Situation"
            Items="{Binding FamilySituation}" />
        <UC:TextBoxUserControl
            Grid.Row="4"
            Grid.Column="1"
            Caption="Residence"
            Hint="Enter your Residence place" />
    </Grid>
</UserControl>
