<Window
    x:Class="EEMS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="800"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Border
        Background="#eff2f7"
        CornerRadius="30"
        MouseDown="Border_MouseDown"
        MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid Margin="0,4,0,-4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Menu  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Manu Icon  -->
                <Button Margin="20,28,0,35" Style="{StaticResource topButton}">
                    <Icon:PackIconMaterial
                        Width="15"
                        Height="15"
                        Kind="Menu" />
                </Button>

                <Border
                    Grid.Row="1"
                    Margin="0,6,0,-6"
                    Background="#623ed0"
                    CornerRadius="0 50 0 30">
                    <DockPanel>
                        <!--  Menu Logo  -->
                        <Border
                            Width="80"
                            Height="80"
                            Margin="20,-30,0,0"
                            Padding="3"
                            HorizontalAlignment="Left"
                            Background="White"
                            CornerRadius="100"
                            DockPanel.Dock="Top">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Resources/Images/user.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>

                        <!--  Manu Titles  -->
                        <TextBlock
                            Height="29"
                            Margin="5,25,0,10"
                            DockPanel.Dock="Top"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="Silver Club"
                            TextAlignment="Left" />
                        <TextBlock
                            Margin="5,25,0,10"
                            DockPanel.Dock="Top"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#d0bfff"
                            Text="Members, France"
                            TextAlignment="Left" />

                        <!--  Menu Separator  -->
                        <Separator
                            Height="0.8"
                            Margin="25"
                            Background="#7e5fdc"
                            DockPanel.Dock="Top" />

                        <!--  Manu Button  -->
                        <StackPanel DockPanel.Dock="Top">
                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="HomeVariant" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Dashboard" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="CalendarClock" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Events" />
                                </StackPanel>
                            </Button>

                            <Button
                                Background="#7b5cd6"
                                Foreground="White"
                                Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="AccountMultipleOutline" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Members" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="CashMultiple" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Wallet" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="ForumOutline" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Message" />
                                </StackPanel>
                            </Button>

                        </StackPanel>

                        <Button
                            Margin="15,0,15,20"
                            VerticalAlignment="Bottom"
                            DockPanel.Dock="Bottom"
                            Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Logout" Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="Logout" />
                            </StackPanel>
                        </Button>
                    </DockPanel>

                </Border>
            </Grid>

            <!--  Main Section  -->
            <Grid Grid.Column="1" Margin="30,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!--  exit window  -->
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        x:Name="btnMinimize"
                        Margin="0,0,10,0"
                        Click="btnMinimize_Click"
                        FontSize="20"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial Kind="Minus" />
                    </Button>

                    <Button
                        x:Name="btnExit"
                        Click="btnExit_Click"
                        FontSize="20"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial Kind="Xamarin" />
                    </Button>

                </StackPanel>
                <!--  Search Textbox  -->
                <Grid
                    Grid.Row="1"
                    Width="300"
                    HorizontalAlignment="Left">
                    <TextBlock
                        Margin="20,0"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1"
                        Foreground="#b0b9c6"
                        IsHitTestVisible="False"
                        Text="Search here ..."
                        Visibility="{Binding ElementName=txtSearch, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}" />

                    <TextBox x:Name="txtSearch" Style="{StaticResource textboxSearch}" />
                    <Icon:PackIconMaterial
                        Width="15"
                        Height="15"
                        Margin="0,0,15,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Foreground="#b0b9c6"
                        Kind="Magnify" />
                </Grid>

                <!--  Top Buttons  -->
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Margin="0,0,20,0"
                        HorizontalAlignment="Right"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial Kind="Bell" />
                    </Button>

                    <Button HorizontalAlignment="Right" Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial Kind="Cog" />
                    </Button>

                </StackPanel>

                <!--  Page Title  -->
                <TextBlock
                    Grid.Row="2"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Left"
                    FontSize="32"
                    FontWeight="SemiBold"
                    Foreground="#121518"
                    Text="Members" />

                <!--  Add Button  -->
                <Button Grid.Row="2" Style="{StaticResource addButton}">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial
                            Width="11"
                            Height="11"
                            Margin="0,1,8,0"
                            VerticalAlignment="Center"
                            Kind="Plus" />
                        <TextBlock Text="Add New Member" />
                    </StackPanel>
                </Button>

                <!--  Separator  -->
                <Separator
                    Grid.Row="4"
                    Height="1"
                    Margin="0,-1,0,10"
                    Background="#dae2ea" />

                <!--  Tab Button  -->
                <StackPanel
                    Grid.Row="3"
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
                    <Button
                        BorderBrush="#784ff2"
                        Content="Club Staff"
                        Style="{StaticResource tabButton}" />
                    <Button Content="Players" Style="{StaticResource tabButton}" />
                    <Button Content="Archived" Style="{StaticResource tabButton}" />
                </StackPanel>

                <!--  Counter Title  -->
                <TextBlock
                    Grid.Row="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="#121517"
                    Text="68 Club Staff" />

                <TextBlock
                    Grid.Row="5"
                    Margin="0,0,215,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="#121517"
                    Text="Filter by" />

                <!--  Filter Textbox  -->
                <Grid
                    Grid.Row="5"
                    Width="200"
                    HorizontalAlignment="Right">
                    <TextBlock
                        Margin="15,0"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1"
                        Foreground="#b0b9c6"
                        IsHitTestVisible="False"
                        Text="Search in Member ..."
                        Visibility="{Binding ElementName=txtFilter, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}" />

                    <TextBox x:Name="txtFilter" Style="{StaticResource textboxSearch}" />
                    <Icon:PackIconMaterial
                        Width="15"
                        Height="15"
                        Margin="0,0,15,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Foreground="#b0b9c6"
                        Kind="Magnify" />
                </Grid>

                <!--  Members Datagrid  -->
                <DataGrid
                    x:Name="membersDataGrid"
                    Grid.Row="6"
                    CellStyle="{DynamicResource DataGridCellStyle1}"
                    ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                    RowStyle="{DynamicResource DataGridRowStyle1}"
                    Style="{DynamicResource DataGridStyle1}">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn
                            Width="auto"
                            CanUserResize="False"
                            ElementStyle="{StaticResource CheckBoxStyle1}">
                            <DataGridCheckBoxColumn.HeaderTemplate>
                                <DataTemplate>
                                    <CheckBox Style="{StaticResource CheckBoxStyle1}" />
                                </DataTemplate>
                            </DataGridCheckBoxColumn.HeaderTemplate>
                        </DataGridCheckBoxColumn>

                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding Number}"
                            CanUserResize="False"
                            Header="#"
                            IsReadOnly="True" />
                        <DataGridTemplateColumn
                            Width="*"
                            Header=" Member"
                            IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border
                                            Width="25"
                                            Height="25"
                                            Margin="0,0,10,0"
                                            Background="{Binding BgColor}"
                                            CornerRadius="50">
                                            <TextBlock
                                                Margin="0,0,0,1"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="{Binding Character}" />
                                        </Border>
                                        <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Position}"
                            CanUserResize="False"
                            Header="Position"
                            IsReadOnly="True" />

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Email}"
                            CanUserResize="False"
                            Header="Email"
                            IsReadOnly="True" />

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Phone}"
                            CanUserResize="False"
                            Header="Phone Number"
                            IsReadOnly="True" />

                        <DataGridTemplateColumn
                            Width="auto"
                            Header=" Operations"
                            IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource gridViewButton}">
                                            <Icon:PackIconMaterial Kind="EyeOutline" Style="{StaticResource gridButtonIcon}" />
                                        </Button>
                                        <Button Margin="5,0,0,0" Style="{StaticResource gridEditButton}">
                                            <Icon:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}" />
                                        </Button>
                                        <Button Margin="5,0,0,0" Style="{StaticResource gridRemoveButton}">
                                            <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}" />
                                        </Button>
                                        <!--<TextBlock VerticalAlignment="Center" Text="..." />-->
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                    </DataGrid.Columns>
                </DataGrid>

                <!--  Pagination Section  -->
                <Border
                    Grid.Row="7"
                    Margin="0,10,10,10"
                    Padding="5"
                    HorizontalAlignment="Right"
                    Background="White"
                    BorderBrush="#dee4ec"
                    BorderThickness="1"
                    CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource pagingButton}">
                            <Icon:PackIconMaterial Kind="ChevronLeft" Style="{StaticResource pagingButtonIcon}" />
                        </Button>
                        <Rectangle
                            Width="1"
                            Margin="3,7"
                            Fill="#dee4ec" />

                        <Button Content="1" Style="{StaticResource pagingButton}" />
                        <Button
                            Background="#7250f2"
                            Content="2"
                            Foreground="White"
                            Style="{StaticResource pagingButton}" />
                        <Button Content="3" Style="{StaticResource pagingButton}" />
                        <Button
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Content="..."
                            FontSize="15"
                            Foreground="#6c7682"
                            Style="{StaticResource pagingButton}" />
                        <Button Content="7" Style="{StaticResource pagingButton}" />
                        <Button Content="8" Style="{StaticResource pagingButton}" />
                        <Button Content="9" Style="{StaticResource pagingButton}" />
                        <Rectangle
                            Width="1"
                            Margin="3,7"
                            Fill="#dee4ec" />
                        <Button Style="{StaticResource pagingButton}">
                            <Icon:PackIconMaterial Kind="ChevronRight" Style="{StaticResource pagingButtonIcon}" />
                        </Button>
                    </StackPanel>
                </Border>


















            </Grid>


        </Grid>
    </Border>
</Window>
