<Window
    x:Class="EEMS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:UC="clr-namespace:EEMS.UI.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:page="clr-namespace:EEMS.UI.Views.Employee"
    Title="MainWindow"
    Width="1200"
    Height="800"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        Background="#eff2f7"
        CornerRadius="30"
        MouseDown="Border_MouseDown"
        MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid Margin="0,4,0,-4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Menu  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Manu Icon  -->
                <Button Margin="20,28,0,35" Style="{StaticResource topButton}">
                    <Icon:PackIconMaterial
                        Width="15"
                        Height="15"
                        Kind="Menu" />
                </Button>

                <Border
                    Grid.Row="1"
                    Margin="0,6,0,-6"
                    Background="#623ed0"
                    CornerRadius="0 50 0 30">
                    <DockPanel>
                        <!--  Menu Logo  -->
                        <!--
                        <Border
                        Width="80"
                        Height="80"
                        Margin="20,-30,0,0"
                        Padding="3"
                        HorizontalAlignment="Left"
                        Background="White"
                        CornerRadius="100"
                        DockPanel.Dock="Top">
                        <Ellipse>
                        <Ellipse.Fill>
                        <ImageBrush ImageSource="/Resources/Images/user.png" />
                        </Ellipse.Fill>
                        </Ellipse>
                        </Border>-->

                        <!--  Manu Titles  -->
                        <TextBlock
                            Height="29"
                            Margin="25,25,0,10"
                            DockPanel.Dock="Top"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="Company Name"
                            TextAlignment="Left" />
                        <TextBlock
                            Margin="25,25,0,10"
                            DockPanel.Dock="Top"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#d0bfff"
                            Text="Bousmail"
                            TextAlignment="Left" />

                        <!--  Menu Separator  -->
                        <Separator
                            Height="0.8"
                            Margin="25"
                            Background="#7e5fdc"
                            DockPanel.Dock="Top" />

                        <!--  Manu Button  -->
                        <StackPanel DockPanel.Dock="Top">
                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="HomeVariant" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Dashboard" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="CalendarClock" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Projects" />
                                </StackPanel>
                            </Button>

                            <Button
                                Background="#7b5cd6"
                                Foreground="White"
                                Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="AccountMultipleOutline" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Employees" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="CashMultiple" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Salary" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="ForumOutline" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Condidates" />
                                </StackPanel>
                            </Button>

                        </StackPanel>

                        <Button
                            Margin="15,0,15,20"
                            VerticalAlignment="Bottom"
                            DockPanel.Dock="Bottom"
                            Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Logout" Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="Logout" />
                            </StackPanel>
                        </Button>
                    </DockPanel>
                </Border>
            </Grid>

            <!--  Main Section  -->
            <Grid Grid.Column="1" Margin="30,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  exit window  -->
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        x:Name="btnMinimize"
                        Margin="0,0,10,0"
                        Click="btnMinimize_Click"
                        FontSize="20"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial Kind="Minus" />
                    </Button>

                    <Button
                        x:Name="btnExit"
                        Click="btnExit_Click"
                        FontSize="20"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial Kind="Xamarin" />
                    </Button>
                </StackPanel>

                <!--  Top Buttons  -->
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <UC:NotificationButtonControl />
                    <UC:SettingsButtonControl />
                </StackPanel>

                <Frame
                    x:Name="MainFrame"
                    Grid.Row="2"
                    NavigationUIVisibility="Hidden" />

                <!--  Pagination Section  -->
